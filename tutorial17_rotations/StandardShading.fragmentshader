#version 330 core

in vec2 UV;

uniform bool useSolidColor;
uniform vec3 solidColor;
uniform sampler2D myTextureSampler;

out vec4 color;

void main() {
    if (useSolidColor)
        color = vec4(solidColor, 1.0);
    else
        color = texture(myTextureSampler, UV);   // or vec2(UV.x, 1.0 - UV.y)
}
